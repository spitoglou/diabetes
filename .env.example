# Diabetes Prediction System - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# MongoDB Configuration (REQUIRED)
# =============================================================================
MONGO_URI=mongodb+srv://spitoglou:********@cluster0.kybxoii.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=test_database_1

# =============================================================================
# Neptune ML Tracking (OPTIONAL)
# =============================================================================
# Set ENABLE_NEPTUNE=true to enable experiment tracking
ENABLE_NEPTUNE=false
NEPTUNE_API_TOKEN=your_neptune_api_token_here
NEPTUNE_PROJECT=your_username/your_project

# =============================================================================
# Application Settings
# =============================================================================
# DEBUG: Enable verbose diagnostic logging
#   - false (default): Standard operational logging
#   - true: Enables additional debug output including:
#     * Full request/response payloads in API endpoints
#     * Intermediate data shapes during pipeline execution
#     * Feature extraction details
#     * Raw prediction values
DEBUG=false

# LOG_LEVEL: Controls logging verbosity across all entry points
#   - DEBUG: Most verbose, includes all internal state details
#   - INFO (default): Standard operational events
#   - WARNING: Only potential issues
#   - ERROR: Only actual failures
LOG_LEVEL=INFO

# =============================================================================
# Prediction Settings
# =============================================================================
# Default patient ID from Ohio T1DM dataset (559, 563, 570, 575, 588, 591)
DEFAULT_PATIENT_ID=559

# Window size in 5-minute intervals (12 = 1 hour of history)
WINDOW_STEPS=12

# Prediction horizon in 5-minute intervals (6 = 30 minutes ahead)
PREDICTION_HORIZON=6

# =============================================================================
# Data Paths (OPTIONAL - defaults shown)
# =============================================================================
DATA_PATH=data
MODELS_PATH=models
DATAFRAMES_PATH=dataframes
